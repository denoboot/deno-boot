{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-write --allow-env --unstable main.ts",
    "dev": "deno run --allow-all --watch main.ts",
    "test": "deno test --allow-net --allow-read --allow-write --allow-env --unstable",
    "runtime:dev": "./boot dev",
    "runtime:build": "./boot build",
    "runtime:preview": "./boot preview"
  },
  "compilerOptions": {
    "lib": [
      "deno.window",
      "deno.unstable",
      "deno.worker",
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "esnext"
    ],
    "strict": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
