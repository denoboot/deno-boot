{
  "tasks": {
    "dev:demo": "cd demo && deno run dev:all",
    "test": "deno test -A",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "clean:prune": "rm -rf deno.lock node_modules && deno clean",
    "clean:install": "deno task clean:prune && deno install"
  },

  "fmt": {
    "lineWidth": 120
  },

  "workspace": [
    "packages/*",
    "packages-internal/*",
    "packages-engine-plugins/*",
    "packages-engines/*",
    "labs/*",
    "demo/"
  ],
  "importMap": "./import_map.json",
  "nodeModulesDir": "auto"
}
